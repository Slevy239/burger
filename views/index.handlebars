<h1>Burgers!</h1>

<div class="container">
	<div class="row">
		<div class="col-md-12 text-center enter_section">
			<form action="/burgers/create" method="POST" id="submit">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
		</div>
	</div>
</div>



<div class="container">
	<div class="row">
		<div class="col">
			<h2>To Be Eaten!</h2>
			<ol>
				{{#each burgers}}
				{{#unless this.devoured}}
				{{> burgers/burger-block devoured=false}}
				{{/unless}}
				{{/each}}
			</ol>
		</div>

		<div class="col">
			<h2>Eaten!</h2>
			<ul>
				{{#each burgers}}
				{{#if eaten}}
				{{> burgers/burger-block devoured=true}}
				{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>
</div>